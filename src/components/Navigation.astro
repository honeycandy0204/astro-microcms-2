<style>
  /* sp */
  .menu {
    display: none;
  }
  /* pc */
  @media screen and (min-width: 768px) {
    .menu {
      display: block;
      position: fixed;
      width: 100%;
      z-index: 10;
    }
    ul {
      align-items: center;
      display: flex;
      font-family: 'Oswald';
      font-size: 1.5rem;
      font-weight: bold;
      justify-content: end;
      padding: 4px 20px;
      gap: 20px;
      line-height: 1;
    }
    a {
      position: relative;
      color: var(--accent-light);
    }
    a::after {
      display: block;
      position: absolute;
      left: 0;
      content: '';
      width: 100%;
      height: 1px;
      background: var(--accent-light);
      bottom: -1px;
      transform: scale(0, 1);
      transform-origin: center top; /*変形（アンダーラインの伸長）の原点がaタグ（各メニュー）の右端*/
      transition: transform 0.3s; /*変形の時間*/
    }

    a:hover::after {
      transform: scale(1, 1); /*ホバー後、x軸方向に1（相対値）伸長*/
    }
  }
</style>
